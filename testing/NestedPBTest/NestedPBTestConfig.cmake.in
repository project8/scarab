# NestedPBTestConfig.cmake

get_filename_component( NestedPBTest_CMAKE_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH )

# Find the dependencies
include( CMakeFindDependencyMacro )
find_dependency( PBTest REQUIRED PATHS ${NestedPBTest_CMAKE_DIR}/PBTest )
find_dependency( Scarab REQUIRED PATHS ${NestedPBTest_CMAKE_DIR}/Scarab )

# Import targets if they're not already present
if( NOT TARGET NestedPBTest::@NestedPBTest_FULL_PROJECT_NAME@ )
    if( TARGET @NestedPBTest_FULL_PROJECT_NAME@ )
        message( STATUS "******** we have target @NestedPBTest_FULL_PROJECT_NAME@" )
        add_library( NestedPBTest::@NestedPBTest_FULL_PROJECT_NAME@ ALIAS @NestedPBTest_FULL_PROJECT_NAME@ )
    else()
        message( STATUS "******** don't have @NestedPBTest_FULL_PROJECT_NAME@ target; including the targets file" )
        include("${NestedPBTest_CMAKE_DIR}/NestedPBTestTargets.cmake")
    endif()
endif()
